<?xml version="1.0" encoding="utf-8"?>
<com.lchrislee.longjourney.views.BattleEngageOptionListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/item_engage_option_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        tools:src="@drawable/slime"
        />

    <TextView
        android:id="@+id/item_engage_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:textSize="24sp"
        android:textAllCaps="true"
        tools:text="@string/default_list_entry_text"
        />

</com.lchrislee.longjourney.views.BattleEngageOptionListItemLayout>